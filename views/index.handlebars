<div class="row">

    <div class="col-lg-12">
        {{#if article}}
        {{#each article}}
        <div class="card flex-row flex-wrap" data-id="{{this._id}}" id="mh-articles">
            <div class="card-header border-0 p-0">
                <img class="my-auto" src="{{this.preview}}" style="height: 52px;">
            </div>
            <div class="card-body px-1">
                <h5 class="card-title">{{this.title}}</h5>
                <p> {{this.summary}}</p>
                <a href={{this.link}} target="_blank">{{this.link}}</a>
                {{!-- <br><br> --}}
                <div class="w-100"></div>
                <div class="card-footer">
                    <button type="button" class="btn btn-dark save" data-id={{this._id}}>Save Article</button>

                </div>
            </div>
        </div>
        {{/each}}
        {{else}}
        <div class="card">
            <div class="card-body">
                <h5>No scraped Monster Hunter reddit threads found! Click the "Scrape MH Reddit" link to populate some
                    reddit thread links here.</h5>
            </div>
        </div>
        {{/if}}

    </div>

</div>